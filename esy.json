{
    "name": "tornado",
    "esy": {
        "build": "dune build -p #{self.name}",
        "release": {
            "bin": [
                "tornado_cli"
            ]
        },
        "buildEnv": {
            "PATH": "%{localStore}%/../bin:$PATH"
        }
    },
    "license": "MIT",
    "scripts": {
        "start_cli": "esy x tornado_cli.exe",
        "watch": "esy b dune build --watch",
        "build": "dune build -p tornado",
        "test": "dune exec -p tornado -- ./test.sh",
        "format": "dune build @fmt --auto-promote",
        "build_static": "dune build --profile=static --release"
    },
    "dependencies": {
        "ocaml": "4.12.x",
        "@opam/dune": "*",
        "@opam/core": "*"
    },
    "devDependencies": {
        "@opam/ocaml-lsp-server": "*",
        "@opam/ocamlformat": "*"
    }
}